package question02;

import java.util.Scanner;

public class Fibonacci {
	public int n;
	static long fibo() {
		return (n < 2) ? n : fibo(n - 1) + fibo(n - 2);
	}

	public static void main(String[] args) {
			Scanner sc = new Scanner(System.in);
			System.out.print("Digite quantidade de termos que será impresso (1 a 50): ");
			int nVect = sc.nextInt();
			System.out.print("Digite um número para saber se pertence ou não a sequência de Fibonati: ");
			int n = sc.nextInt();
			Integer pertence = 0;
			for (int i = 0; i < nVect; i++) {
				System.out.print(Fibonacci.fibo(i) + " ");
				if (Fibonacci.fibo(n) == n) {
					pertence = 1;
				}
			}

			System.out.println();
			if (pertence == 1) {
				System.out.println("O número" + pertence + " pertence a Sequencia de Fibonacci.");

			} else {
				System.out.println("Esse número não pertence a Sequencia de Fibonacci.");
			}
			sc.close();
		}

	}

